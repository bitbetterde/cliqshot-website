---
import "../base.css";
import CliqshotLogo from "../assets/cliqshot_logo.svg?react";
import CliqshotImpressumLogo from "../assets/cliqshot_logo_impressum.svg?react";
import PeopleIllu from "../assets/illustrations/people.svg?react";
import LinkButton from "../components/LinkButton";
import FeatureItem from "../components/FeatureItem";
import Carousel from "../components/Carousel.tsx";
import BookingForm from "../components/BookingForm";
import { StarDecoration } from "../components/StarDecoration";

const isProduction = import.meta.env.MODE === "production";
---

<html lang="de" class="h-full antialiased scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Cliqshot Fotobox</title>
    {
      isProduction && (
        <script
          async
          src="https://analytics.bitbetter.de/script.js"
          data-website-id="f45ca5ed-b81c-4201-ab5d-245202f7c4c7"
        />
      )
    }
  </head>
  <body class="bg-champagne h-full grid-wrapper">
    <div class="full-bleed absolute top-0 bg-black h-[25vw] md:h-[15vw] w-full -z-10"></div>
    <div class="grid grid-cols-1 sm:grid-cols-12 gap-x-4 gap-y-12 relative">
      <StarDecoration
        className="absolute top-24 right-80 w-16 h-16 text-pink"
        stroke={3}
      />
      <StarDecoration
        className="absolute top-40 right-64 w-28 h-28 text-purple"
        stroke={3}
      />
      <StarDecoration
        className="absolute top-[820px] left-56 w-16 h-16 text-pink"
        stroke={4}
      />
      <StarDecoration
        className="absolute top-[700px] left-32 w-28 h-28 text-purple"
        stroke={3}
      />
      <div class="col-span-1 sm:col-start-4 sm:col-span-6 pt-8 pb-20">
        <div
          class="flex flex-col gap-8 items-center max-w-2xl mx-auto overflow-x-hidden sm:overflow-x-auto"
        >
          <PeopleIllu className="w-[115%] sm:w-full z-10" />
          <div class="w-3/5 mx-auto flex flex-col gap-8 text-xl text-center">
            <CliqshotLogo />Die smarte Photobox für eure Feiern, Sommerfeste,
            Kundenevents, Jubiläen, Teambuilding, u.v.m.
          </div>
        </div>
      </div>
    </div>

    <div class="py-8 md:px-8 grid grid-cols-1 md:grid-cols-2 md:gap-8 z-10">
      <Carousel
        images={[
          "https://picsum.photos/id/237/1280/720",
          "https://picsum.photos/id/27/1280/720",
          "https://picsum.photos/id/36/1280/720",
        ]}
        client:only="react"
        className="bg-black md:order-last"
      />
      <div
        class="bg-orange font-dela p-8 flex flex-col gap-12 text-4xl items-center justify-between"
      >
        <div>Early-Bird-Aktion</div>
        <div
          class="text-7xl font-sans font-bold flex flex-col gap-4 items-center"
        >
          <div class="text-white line-through text-3xl">299 €</div><div>
            149 €
          </div>
        </div>
        <div class="text-xs font-sans flex flex-col items-center gap-4">
          <LinkButton href="#inquiry">Jetzt reservieren!</LinkButton>
          <div class="text-center px-16">
            Leihgebühr pro Event (72 Std.), keine zusätzlichen Kosten, first
            come first serve, zeitlich begrenztes Angebot.
          </div>
        </div>
      </div>
    </div>

    <div class="p-4 lg:p-8 grid grid-cols-1 lg:grid-cols-4 md:gap-4 lg:gap-8">
      <FeatureItem title="100% sorglose Verbindung" icon="satellite">
        Einfach immer gut verbunden: Dank integriertem LTE-Modem, kein
        Kabel/WLAN erforderlich. Eine schnelle und datenschutz-freundliche
        Cloud-Lösung stellt die Bilder direkt online.
      </FeatureItem>
      <FeatureItem title="Instant Access für alle!" icon="smartphone">
        Alle Photobox-Nutzer:innen können via Smartphone sofort auf ihre Fotos
        zugreifen, Bilder speichern und teilen. Kein Warten auf E-Mails oder
        Abzüge, einfach den Moment festhalten und mitnehmen.
      </FeatureItem>
      <FeatureItem title="Höchste Bildqualität" icon="eye">
        Erstklassiges spiegelloses Kamerasystem von Sony mit hochwertigem
        Festbrennweite-Objektiv. Die Nutzer:innen erhalten alle Bilder auch als
        RAW-Dateien - keine Kompromisse bei der Qualität.
      </FeatureItem>
      <FeatureItem title="Live Setup Service" icon="light">
        Mit unserer Remote-Software richten wir die Kamera vor Ort mit dir ein.
        So stellen wir sicher, dass Licht und Farben optimal auf die
        indiviudellen räumlichen Gegebenheiten angepasst sind.
      </FeatureItem>
    </div>

    <div class="grid grid-cols-12 gap-4 py-8">
      <div class="bg-black col-start-4 col-span-6 h-[400px]"></div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-12 gap-4 py-8">
      <div
        class="col-span-1 md:col-start-4 px-4 md:px-0 md:col-span-6 text-center font-dela font-bold text-4xl"
      >
        Jetzt Buchung anfragen!
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-12 gap-4 py-8 mb-12">
      <div class="col-span-1 px-4 md:px-0 md:col-start-4 md:col-span-6">
        <BookingForm client:only="react" />
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-12 gap-4 py-8 relative" >
      <div
        class="col-span-1 px-4 md:px-0 md:col-start-4 md:col-span-6 flex"
      >
        <StarDecoration
          className="absolute top-48 right-16 w-16 h-16 text-orange"
          stroke={3}
        />
        <StarDecoration
          className="absolute top-12 right-64 w-32 h-32 text-purple"
          stroke={3}
        />
        <StarDecoration
          className="absolute top-24 left-24 w-16 h-16 text-pink"
          stroke={4}
        />
        <StarDecoration
          className="absolute top-40 left-56 w-28 h-28 text-purple"
          stroke={3}
        />
        <div class="mx-auto flex gap-8 mb-16 mt-64">
          <CliqshotImpressumLogo className="h-24" /><div>
            bitbetter GmbH<br />
            040 33463362<br />
            kontakt@cliqshot.de<br />
            <a
              href="https://bitbetter.de/#footer"
              class="cursor-pointer underline"
              target="_blank">Impressum</a
            >
          </div>
        </div>
      </div>
    </div>
  </body>
  <div class="full-bleed static bottom-0 bg-black h-[5vh] w-full -z-10"></div>
</html>
